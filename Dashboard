    <!-- Hidden file inputs for image uploads -->
    <input type="file" id="imageUpload" class="file-input" accept="image/*" onchange="handleImageUpload(event)">

    <script>
        let editMode = false;
        let currentImageKey = '';

        // Toggle Edit Mode
        function toggleEditMode() {
            editMode = !editMode;
            document.body.classList.toggle('edit-mode', editMode);
            
            const editables = document.querySelectorAll('.editable');
            editables.forEach(element => {
                if (editMode) {
                    element.contentEditable = true;
                    element.style.cursor = 'text';
                } else {
                    element.contentEditable = false;
                    element.style.cursor = 'default';
                }
            });
            
            // Update button text
            const btn = document.querySelector('.edit-controls .edit-btn');
            btn.textContent = editMode ? '👁️ View Mode' : '✏️ Edit Mode';
            
            // Show success message
            showNotification(editMode ? 'Edit mode activated!' : 'View mode activated!');
        }

        // Save Content to localStorage
        function saveContent() {
            const content = {};
            
            // Save text content
            document.querySelectorAll('.editable[data-key]').forEach(element => {
                const key = element.getAttribute('data-key');
                if (element.tagName === 'A') {
                    content[key] = {
                        text: element.textContent,
                        href: element.getAttribute('href')
                    };
                } else {
                    content[key] = element.textContent;
                }
            });
            
            // Save image sources
            document.querySelectorAll('.editable-image[data-key]').forEach(element => {
                const key = element.getAttribute('data-key');
                if (element.tagName === 'IMG') {
                    content[key] = element.src;
                } else {
                    const bgImage = element.style.backgroundImage;
                    if (bgImage) {
                        content[key] = bgImage.slice(5, -2); // Remove url(" and ")
                    }
                }
            });
            
            // Save to localStorage using a temporary variable (since localStorage isn't available)
            window.portfolioContent = JSON.stringify(content);
            showNotification('Content saved successfully!', 'success');
            
            // Also create download link
            const dataStr = "data:text/json;charset=utf-8," + encodeURIComponent(JSON.stringify(content, null, 2));
            const downloadAnchorNode = document.createElement('a');
            downloadAnchorNode.setAttribute("href", dataStr);
            downloadAnchorNode.setAttribute("download", "portfolio-content.json");
            document.body.appendChild(downloadAnchorNode);
            downloadAnchorNode.click();
            downloadAnchorNode.remove();
        }

        // Load Content from localStorage
        function loadContent() {
            try {
                // Try to load from temporary variable first
                const saved = window.portfolioContent;
                if (!saved) {
                    showNotification('No saved content found!', 'warning');
                    return;
                }
                
                const content = JSON.parse(saved);
                
                // Restore text content
                Object.keys(content).forEach(key => {
                    const element = document.querySelector(`[data-key="${key}"]`);
                    if (element) {
                        if (typeof content[key] === 'object' && content[key].text) {
                            // Handle links
                            element.textContent = content[key].text;
                            if (content[key].href) {
                                element.setAttribute('href', content[key].href);
                            }
                        } else if (element.classList.contains('editable-image')) {
                            // Handle images
                            if (element.tagName === 'IMG') {
                                element.src = content[key];
                            } else {
                                element.style.backgroundImage = `url("${content[key]}")`;
                            }
                        } else {
                            // Handle text content
                            element.textContent = content[key];
                        }
                    }
                });
                
                showNotification('Content loaded successfully!', 'success');
            } catch (error) {
                showNotification('Error loading content!', 'error');
                console.error('Load error:', error);
            }
        }

        // Image Upload Functions
        function uploadImage(key) {
            currentImageKey = key;
            document.getElementById('imageUpload').click();
        }

        function handleImageUpload(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const imageUrl = e.target.result;
                    const element = document.querySelector(`[data-key="${currentImageKey}"]`);
                    
                    if (element) {
                        if (element.tagName === 'IMG') {
                            element.src = imageUrl;
                        } else {
                            element.style.backgroundImage = `url("${imageUrl}")`;
                        }
                    }
                    
                    showNotification('Image updated successfully!', 'success');
                };
                reader.readAsDataURL(file);
            }
        }

        // Notification System
        function showNotification(message, type = 'info') {
            // Remove existing notifications
            const existing = document.querySelector('.notification');
            if (existing) existing.remove();
            
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.textContent = message;
            
            // Styles for notification
            Object.assign(notification.style, {
                position: 'fixed',
                top: '20px',
                left: '50%',
                transform: 'translateX(-50%)',
                background: type === 'success' ? 'linear-gradient(45deg, #4CAF50, #45a049)' : 
                           type === 'error' ? 'linear-gradient(45deg, #f44336, #da190b)' : 
                           type === 'warning' ? 'linear-gradient(45deg, #ff9800, #e68900)' :
                           'linear-gradient(45deg, #FFD700, #FFA500)',
                color: type === 'warning' || type === 'info' ? '#000' : '#fff',
                padding: '12px 24px',
                borderRadius: '8px',
                fontWeight: 'bold',
                zIndex: '10000',
                boxShadow: '0 4px 15px rgba(0, 0, 0, 0.3)',
                animation: 'slideInDown 0.3s ease'
            });
            
            document.body.appendChild(notification);
            
            // Remove after 3 seconds
            setTimeout(() => {
                notification.style.animation = 'slideOutUp 0.3s ease';
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        // Add notification animations
        const notificationStyle = document.createElement('style');
        notificationStyle.textContent = `
            @keyframes slideInDown {
                from {
                    opacity: 0;
                    transform: translateX(-50%) translateY(-100%);
                }
                to {
                    opacity: 1;
                    transform: translateX(-50%) translateY(0);
                }
            }
            @keyframes slideOutUp {
                from {
                    opacity: 1;
                    transform: translateX(-50%) translateY(0);
                }
                to {
                    opacity: 0;
                    transform: translateX(-50%) translateY(-100%);
                }
            }
        `;
        document.head.appendChild(notificationStyle);

        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Header scroll effect
        window.addEventListener('scroll', function() {
            const header = document.querySelector('.header');
            if (window.scrollY > 100) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    if (entry.target.classList.contains('fade-in')) {
                        entry.target.classList.add('visible');
                    }
                    if (entry.target.classList.contains('slide-in-left')) {
                        entry.target.classList.add('visible');
                    }
                    if (entry.target.classList.contains('slide-in-right')) {
                        entry.target.classList.add('visible');
                    }
                }
            });
        }, observerOptions);

        // Observe all animated elements
        document.querySelectorAll('.fade-in, .slide-in-left, .slide-in-right').forEach(el => {
            observer.observe(el);
        });

        // Enhanced cursor trail effect
        let mouseX = 0;
        let mouseY = 0;
        let isMouseMoving = false;

        document.addEventListener('mousemove', function(e) {
            mouseX = e.clientX;
            mouseY = e.clientY;
            isMouseMoving = true;
            
            // Create golden trail particles
            createGoldenTrail();
            
            setTimeout(() => {
                isMouseMoving = false;
            }, 100);
        });

        function createGoldenTrail() {
            if (Math.random() > 0.7) { // Only create trail 30% of the time
                const trail = document.createElement('div');
                trail.style.cssText = `
                    position: fixed;
                    left: ${mouseX}px;
                    top: ${mouseY}px;
                    width: 4px;
                    height: 4px;
                    background: radial-gradient(circle, rgba(255, 215, 0, 0.8), transparent);
                    border-radius: 50%;
                    pointer-events: none;
                    z-index: 9999;
                    animation: goldenTrailFade 1s ease-out forwards;
                `;
                
                document.body.appendChild(trail);
                setTimeout(() => trail.remove(), 1000);
            }
        }

        // Add golden trail animation
        const trailStyle = document.createElement('style');
        trailStyle.textContent = `
            @keyframes goldenTrailFade {
                0% {
                    transform: scale(1) rotate(0deg);
                    opacity: 0.8;
                }
                100% {
                    transform: scale(0) rotate(360deg);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(trailStyle);

        // Sparkle effect on luxury glass elements
        document.querySelectorAll('.luxury-glass').forEach(element => {
            element.addEventListener('mouseenter', function(e) {
                createSparkles(this);
            });
        });

        function createSparkles(element) {
            const rect = element.getBoundingClientRect();
            for (let i = 0; i < 3; i++) {
                setTimeout(() => {
                    const sparkle = document.createElement('div');
                    sparkle.style.cssText = `
                        position: fixed;
                        left: ${rect.left + Math.random() * rect.width}px;
                        top: ${rect.top + Math.random() * rect.height}px;
                        width: 6px;
                        height: 6px;
                        background: linear-gradient(45deg, #FFD700, #FFF);
                        border-radius: 50%;
                        pointer-events: none;
                        z-index: 9999;
                        animation: sparkleAnimation 0.8s ease-out forwards;
                    `;
                    
                    document.body.appendChild(sparkle);
                    setTimeout(() => sparkle.remove(), 800);
                }, i * 100);
            }
        }

        // Add sparkle animation
        const sparkleStyle = document.createElement('style');
        sparkleStyle.textContent = `
            @keyframes sparkleAnimation {
                0% {
                    transform: scale(0) rotate(0deg);
                    opacity: 1;
                }
                50% {
                    transform: scale(1.2) rotate(180deg);
                    opacity: 0.8;
                }
                100% {
                    transform: scale(0) rotate(360deg);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(sparkleStyle);

        // Portfolio item click effects
        document.querySelectorAll('.portfolio-item').forEach(item => {
            item.addEventListener('click', function() {
                if (!editMode) {
                    this.style.animation = 'luxuryPulse 0.4s ease-in-out';
                    setTimeout(() => {
                        this.style.animation = '';
                    }, 400);
                }
            });
        });

        // Add luxury pulse animation
        const pulseStyle = document.createElement('style');
        pulseStyle.textContent = `
            @keyframes luxuryPulse {
                0% { 
                    transform: scale(1);
                    box-shadow: 0 20px 60px rgba(255, 215, 0, 0.2);
                }
                50% { 
                    transform: scale(1.05);
                    box-shadow: 0 30px 80px rgba(255, 215, 0, 0.4);
                }
                100% { 
                    transform: scale(1);
                    box-shadow: 0 20px 60px rgba(255, 215, 0, 0.2);
                }
            }
        `;
        document.head.appendChild(pulseStyle);

        // Floating golden particles in background
        function createFloatingGoldParticle() {
            const particle = document.createElement('div');
            particle.style.cssText = `
                position: fixed;
                width: ${Math.random() * 3 + 1}px;
                height: ${Math.random() * 3 + 1}px;
                background: linear-gradient(45deg, rgba(255, 215, 0, 0.6), rgba(255, 165, 0, 0.4));
                border-radius: 50%;
                left: ${Math.random() * window.innerWidth}px;
                top: ${window.innerHeight + 10}px;
                pointer-events: none;
                z-index: 1;
            `;
            
            const duration = Math.random() * 20000 + 15000;
            const drift = (Math.random() - 0.5) * 300;
            
            particle.animate([
                { 
                    transform: 'translateY(0px) translateX(0px) rotate(0deg)',
                    opacity: 0 
                },
                { 
                    transform: `translateY(-${window.innerHeight/3}px) translateX(${drift/3}px) rotate(120deg)`,
                    opacity: 1,
                    offset: 0.2
                },
                { 
                    transform: `translateY(-${window.innerHeight*2/3}px) translateX(${drift*2/3}px) rotate(240deg)`,
                    opacity: 0.8,
                    offset: 0.7
                },
                { 
                    transform: `translateY(-${window.innerHeight + 100}px) translateX(${drift}px) rotate(360deg)`,
                    opacity: 0 
                }
            ], {
                duration: duration,
                easing: 'ease-out'
            }).onfinish = () => particle.remove();
            
            document.body.appendChild(particle);
        }

        // Create floating particles periodically
        setInterval(createFloatingGoldParticle, 3000);

        // Welcome message
        window.addEventListener('load', function() {
            setTimeout(() => {
                showNotification('Welcome to your editable luxury portfolio! Click "Edit Mode" to start customizing.', 'info');
            }, 1000);
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey || e.metaKey) {
                switch(e.key) {
                    case 'e':
                        e.preventDefault();
                        toggleEditMode();
                        break;
                    case 's':
                        e.preventDefault();
                        saveContent();
                        break;
                    case 'l':
                        e.preventDefault();
                        loadContent();
                        break;
                }
            }
        });

        console.log('✨ Luxury Black & Gold Portfolio Loaded Successfully! ✨');
        console.log('Keyboard shortcuts:');
        console.log('Ctrl/Cmd + E: Toggle Edit Mode');
        console.log('Ctrl/Cmd + S: Save Content');
        console.log('Ctrl/Cmd + L: Load Content');
    </script>
</body>
</html>
